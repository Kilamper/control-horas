---
import Instagram from "@/icons/Instagram.astro"
import Tiktok from "@/icons/Tiktok.astro"
import XTwitter from "@/icons/X-twitter.astro"
---

<footer
	class="justify-right flex flex-wrap bg-secondary py-8 text-white md:flex-row lg:justify-between"
>
	<section class="mx-4 mb-6 flex w-1/3 flex-col md:mx-8 md:mb-0 md:w-auto">
		<h3 class="mb-2 text-lg font-bold lg:text-xl">Sobre Nosotros</h3>
		<a href="/about" class="text-base hover:text-primary lg:text-lg">¿Quiénes somos?</a>
		<a href="/values" class="text-base hover:text-primary lg:text-lg">Nuestros valores</a>
		<a href="/class-management" class="text-base hover:text-primary lg:text-lg">Gestión de clases</a
		>
		<a href="/countries" class="text-base hover:text-primary lg:text-lg">Países</a>
		<a href="/usage-policies" class="text-base hover:text-primary lg:text-lg">Políticas de uso</a>
	</section>
	<section class="mx-4 mb-6 flex w-1/3 flex-col md:mx-8 md:mb-0 md:w-auto">
		<h3 class="mb-2 text-lg font-bold lg:text-xl">Materias</h3>
		<a href="/python" class="text-base hover:text-primary lg:text-lg">Python</a>
		<a href="/biology" class="text-base hover:text-primary lg:text-lg">Biología</a>
		<a href="/dance" class="text-base hover:text-primary lg:text-lg">Baile</a>
		<a href="/picture" class="text-base hover:text-primary lg:text-lg">Dibujo</a>
		<a href="/physics" class="text-base hover:text-primary lg:text-lg">Física</a>
	</section>
	<section class="mx-4 mb-6 flex w-1/3 flex-col md:mx-8 md:mb-0 md:w-auto">
		<h3 class="mb-2 text-lg font-bold lg:text-xl">Más Información</h3>
		<a href="/faqs" class="text-base hover:text-primary lg:text-lg">FAQS</a>
		<a href="/cookies" class="text-base hover:text-primary lg:text-lg">Cookies</a>
		<a href="/usage-policies" class="text-base hover:text-primary lg:text-lg">Políticas de uso</a>
	</section>
	<section class="mx-4 mb-6 flex w-1/3 flex-col md:mx-8 md:mb-0 md:w-auto">
		<h3 class="mb-2 text-lg font-bold lg:text-xl">Síguenos</h3>
		<div class="flex items-center gap-4">
			<a
				href="https://x.com"
				rel="noopener noreferrer"
				aria-label="Enlace que lleva al perfil de XTwitter"><XTwitter class="h-6 w-6" /></a
			>
			<a
				href="https://instagram.com"
				rel="noopener noreferrer"
				aria-label="Enlace que lleva al perfil de Instagram"><Instagram class="h-6 w-6" /></a
			>
			<a
				href="https://tiktok.com"
				rel="noopener noreferrer"
				aria-label="Enlace que lleva al perfil de Tiktok"><Tiktok class="h-6 w-6" /></a
			>
		</div>
		<p class="mt-2 text-base lg:text-lg">Contáctanos si necesitas asistencia</p>
	</section>
</footer>
