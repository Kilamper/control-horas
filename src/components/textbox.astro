---
interface Props {
  type: "password";
  id: string;
  content: string;
  placeholder: string;
}

const { type, id, content, placeholder } = Astro.props;
---

<input
  type={type}
  id={id}
  class="border-b-2 border-black outline-none w-full max-w-md"
  placeholder={placeholder}
/>
<label for={id}>{content}</label>
