---
interface Props {
  type: "text" | "password" | "email"; // puedes añadir más tipos de input si lo necesitas
  id: string;
  content: string;
  placeholder: string;
}

const { type, id, content, placeholder } = Astro.props;
---

<input type={type} id={id} class="border-solid border-b-2 border-black" placeholder={placeholder}/>
<label for={id}>{content}</label>

<style>
  input {
    width: 100%;
    background-color: none;
    padding-top: .6em;
    padding-bottom: .6em;
    outline: none;
  }

  label {
    color: #4C4C4C;
    cursor: pointer;
    position: absolute;
    top: 0;
    transform: translateY(10px);
    transition: transform .5s, color .3s;
  }

  input:first-child {
    margin-right: 10em;
  }

  input:focus + label,
  input:not(:placeholder-shown) + label{
    transform: translateY(-12px) scale(1);
    transform-origin: left top;
    color: #E6622E;
  }
</style>
