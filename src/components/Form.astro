---
import Input from "../components/Input.astro";
---

<section class="flex flex-col">
  <img
    src="logo.svg"
    alt="Ilustración del logo de la página"
    class="lg:block"
  />
  <form class="flex flex-col gap-y-12">
    <h2 class="flex font-sans text-lm mt-9 font-bold justify-center">
			¿Es tu primera vez?&nbsp
      <a href="#" class="underline">Regístrate</a>
    </h2>
    <div class="relative">
      <Input type="email" id="mail" content="Correo:" placeholder=" " />
    </div>
    <div class="relative">
      <Input
        type="password"
        id="passwd"
        content="Contraseña:"
        placeholder=" "
      />
    </div>
    <button
      type="submit"
      class="mx-auto w-56 bg-orange-500 text-white py-2 px-4 rounded-full font-bold text-lg hover:bg-orange-600 justify-center"
    >
      Iniciar Sesión
    </button>
  </form>
</section>
