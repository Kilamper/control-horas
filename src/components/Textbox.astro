---
interface Props {
	type: "password" | "email"
	id: string
	content: string
	placeholder: string
}

const { type, id, content, placeholder } = Astro.props
---

<input
	type={type}
	id={id}
	class="w-full max-w-md border-b-2 border-black outline-none"
	placeholder={placeholder}
/>
<label for={id}>{content}</label>
