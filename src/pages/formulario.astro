---
import Footer from "@/components/footer.astro"
import Menu from "@/components/menu.astro"
---

<html lang="es">
	<head>
		<title>Crear una nueva clase</title>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.15/tailwind.min.css"
		/>

		<meta charset="UTF-8" />
	</head>
	<body>
		<Menu />

		<div
			class="mx-auto my-5 flex w-[560px] items-center justify-center rounded-lg bg-orange-500 text-white"
		>
			<h1 class="text-4xl">Crear una nueva clase</h1>
		</div>

		<div class="mb-12 flex items-end justify-center bg-cover bg-center bg-no-repeat">
			<div class="flex h-full items-center justify-center">
				<section class="flex justify-center">
					<body class="font-sans">
						<section class="flex justify-center">
							<body class="font-sans">
								<section
									class="my-3 mt-2 w-full max-w-xl rounded-lg border-[12px] border-solid border-gray-200 p-5"
								>
									<form action="/new_class" method="post" class="w-97 mx-12 grid grid-cols-2 gap-4">
										<div class="flex flex-col">
											<label for="title" class="block">Titulo:</label>
											<input
												type="text"
												id="title"
												name="title"
												class="w-full rounded border border-gray-300 p-2"
											/>
										</div>
										<div>
											<label for="date" class="block">Fecha:</label>
											<input
												type="date"
												id="date"
												name="date"
												class="w-full rounded border border-gray-300 p-2"
											/>
										</div>
										<div>
											<label for="start_time" class="block">Hora de inicio:</label>
											<input
												type="time"
												id="start_time"
												name="start_time"
												class="w-full rounded border border-gray-300 p-2"
											/>
										</div>
										<div>
											<label for="end_time" class="block">Hora de finalizacion:</label>
											<input
												type="time"
												id="end_time"
												name="end_time"
												class="w-full rounded border border-gray-300 p-2"
											/>
										</div>
										<div class="col-span-2">
											<label for="description" class="block">Descripcion:</label>
											<textarea
												id="description"
												name="description"
												class="w-full resize-y rounded border border-gray-300 p-2"></textarea>
										</div>
										<div class="col-span-2 flex justify-between">
											<a href="/classes" class="mt-2 rounded-md bg-white px-2 py-1 text-black"
												>Cancelar</a
											>
											<button class="mt-2 rounded-md bg-orange-500 px-4 py-1 text-white"
												>Crear</button
											>
										</div>
									</form>
								</section>
							</body>
						</section>
					</body>
				</section>
			</div>
		</div>

		<Footer />
	</body>
</html>
