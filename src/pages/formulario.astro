---
import Menu from "../components/menu.astro";
---

<Menu />

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <!--Contenedor de crear una clase -->
    <div class="clase-container">
      <h1>Crear una nueva clase</h1>
    </div>
    <section>
      <div class="gray-container">
        <div class="white-container">
          <form action="/new_class" method="post">
            <label for="title">Titulo:</label><br />
            <input type="text" id="title" name="title" /><br />
            <label for="start_time">Hora de inicio:</label><br />
            <input type="time" id="start_time" name="start_time" /><br />
            <label for="description">Descripcion:</label><br />
            <textarea id="description" name="description"></textarea><br />
            <label for="date">Fecha:</label><br />
            <input type="date" id="date" name="date" /><br />
            <label for="end_time">Hora de finalizacion:</label><br />
            <input type="time" id="end_time" name="end_time" /><br />
            <input type="submit" value="Guardar" />
            <input type="submit" value="Cancelar" />
          </form>
        </div>
      </div>
    </section>
    <section>
      <!--Footer de astro-->
    </section>
  </body>
</html>

<style is:global>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }

  h1 {
    text-align: center;
    margin-bottom: 30px;
  }

  form {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 20px;
  }

  label {
    grid-column: 1 / 2;
    text-align: right;
    margin-top: 10px;
  }

  input[type="text"],
  input[type="date"],
  input[type="time"] {
    grid-column: 2 / 3;
    padding: 10px;
    margin-top: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  textarea {
    grid-column: 2 / 3;
    padding: 10px;
    margin-top: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    resize: vertical;
  }

  input[type="submit"] {
    grid-column: 1 / 3;
    margin-top: 20px;
    padding: 10px 20px;
    background-color: #e6622e;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  input[type="submit"]:hover {
    background-color: #df8461;
  }

  .logo {
    width: 50px; /* Ajusta el tamaño del logo según sea necesario */
  }
  .usuario {
    display: flex;
    align-items: center;
  }
  .clase-container {
    background-color: #e6622e;
    color: white;
    border-radius: 15px;
  }
  .gray-container {
    background-color: #ccc;
    padding: 20px;
    border-radius: 10px;
  }

  .white-container {
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
  }
</style>
