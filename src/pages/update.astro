---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import Textbox from "../components/textbox.astro";
import Textpassword from "../components/textpassword.astro";
import Button from "../components/button.astro";
import Wave from "../components/Wave.astro";
---

<Layout title="updatePassword">
  <Wave class="absolute right-0 -z-10 h-auto rotate-180" />
  <Header />
  <body>
    <section class="flex flex-col">
      <div class="flex h-screen items-center justify-center">
        <img
          src="password.svg"
          alt="Ilustración de un hombre pensando una contraseña"
          class="hidden lg:block mr-6"
        />
        <div
          class="w-max max-w-md border border-orange-500 bg-white p-8 shadow-md"
        >
          <form>
            <h2 class="mb-4 text-2xl font-bold mr-32">
              Nueva Contraseña
            </h2>
            <div class="mb-4">
              <Textpassword content="Contraseña" />
            </div>
            <Textbox
              type="password"
              id="oldpassword"
              content=""
              placeholder="Contraseña"
            />
            <div class="mb-4">
              <Textpassword content="Repetir Contraseña" />
            </div>
            <Textbox
              type="password"
              id="newpassword"
              content=""
              placeholder="Contraseña"
            />
            <div class="mt-9 flex justify-center items-center">
              <Button content="Confirmar Contraseña" />
            </div>
          </form>
        </div>
      </div>
    </section>
  </body>

  <Footer  />
</Layout>
